{# Adapted from https://www.hawksworx.com/blog/adding-search-to-a-jamstack-site/ #}

{"search" : [
{%- for item in collections.releasedPosts -%}
  {
    "url" : "{{ item.url }}",
    "title" : "{{ item.data.pageTitle }}",
    "date": "{{ item.data.date }}",
    "tags" : "{{item.data.tags}}",
    "excerpt": "{{ item.data.excerpt }}",
    "text" : "{{ (item.data.pageTitle + " " + item.templateContent) | squash }}"
  }{% if not loop.last %},{% else %}{%- endif -%}
{%- endfor -%}
]}